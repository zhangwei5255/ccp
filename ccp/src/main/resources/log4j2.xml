<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

	<Appenders>
		<!-- Async Loggers will auto-flush in batches, so switch off immediateFlush. -->
		<RandomAccessFile name="ASYNC" fileName="async.log"
			immediateFlush="false" append="false">
			<PatternLayout
				pattern="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n" />
		</RandomAccessFile>
		<!-- console output -->
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%-5p | %d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) - %m%n" />
		</Console>
	</Appenders>

	<Loggers>
		<!-- <Logger name="jp.co.drm" level="debug"/> -->

		<!-- pattern layout actually uses location, so we need to include it -->
		<AsyncLogger name="jp.co.drm" level="info"
			includeLocation="true">
			<AppenderRef ref="ASYNC" />
		</AsyncLogger>

		<!-- root loggers -->
		<Root level="info" includeLocation="true">
			<AppenderRef ref="STDOUT" />
		</Root>

		<AsyncLogger name="java.sql" level="info" additivity="false">
            <AppenderRef ref="sql" />
        </AsyncLogger>
        <AsyncLogger name="com.ibatis" level="info" additivity="false">
            <AppenderRef ref="sql" />
        </AsyncLogger>

	</Loggers>

</Configuration>