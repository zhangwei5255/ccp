<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration status="OFF">
	<Properties>
		<Property name="standard">[%d{yyyy/MM/dd HH:mm:ss.SSS}] %m%n</Property>
		<Property name="business">[%d{yyyy/MM/dd HH:mm:ss.SSS}] %m%n</Property>
	</Properties>
	<Appenders>
        <Console
        	name="console"
        	target="SYSTEM_OUT">
            <PatternLayout pattern="${standard}" />
        </Console>
        <RollingFile
        	name="app"
        	fileName="logs/app.log"
        	filePattern="app-%d{MM-dd-yy-HH-mm-ss}-%i.log.gz">
            <PatternLayout pattern="${business}" />
	        <Policies>
	            <OnStartupTriggeringPolicy />
	            <SizeBasedTriggeringPolicy size="200 MB" />
	            <TimeBasedTriggeringPolicy interval="1000" modulate="true"/>
	        </Policies>
	        <DefaultRolloverStrategy max="10" />
        </RollingFile>
        <RollingFile
        	name="sql"
        	fileName="logs/sql.log"
        	filePattern="./sql-%d{MM-dd-yy-HH-mm-ss}-%i.log.gz">
            <PatternLayout pattern="${business}" />
	        <Policies>
	            <OnStartupTriggeringPolicy />
	            <SizeBasedTriggeringPolicy size="200 MB" />
	            <TimeBasedTriggeringPolicy interval="1000" modulate="true"/>
	        </Policies>
	        <DefaultRolloverStrategy max="10" />
        </RollingFile>
	</Appenders>
    <Loggers>
    	<Root level="debug">
            <AppenderRef ref="console"/>
            <AppenderRef ref="app" />
        </Root>
        <Logger name="***.***.***" level="debug" additivity="false">
            <AppenderRef ref="app" />
        </Logger>
        <Logger name="java.sql" level="debug" additivity="false">
            <AppenderRef ref="sql" />
        </Logger>
        <Logger name="com.ibatis" level="debug" additivity="false">
            <AppenderRef ref="sql" />
        </Logger>
    </Loggers>
</configuration>